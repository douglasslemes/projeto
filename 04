def classificar_triangulo(a, b, c):
    # Verifica se os lados formam um triângulo
    if a <= 0 or b <= 0 or c <= 0:
        return "Os lados devem ser maiores que zero."
    if a + b < c or b + c < a or a + c < b:
        return "Os lados não formam um triângulo."

    # Classificação do triângulo
    if a == b == c:
        return "Triângulo Equilátero"
    elif a == b or b == c or a == c:
        return "Triângulo Isósceles"
    else:
        return "Triângulo Escaleno"

# Exemplo de uso
lado1 = 7
lado2 = 8
lado3 = 5
resultado = classificar_triangulo(lado1, lado2, lado3)
print(resultado)  # Saída: Triângulo Equilátero

